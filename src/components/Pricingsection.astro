---
const priceboxes = [
  {
    popular:false,
    packageName:"SEO & Email Content Marketing Package",
    price:'1000',
    subtitle:'Features',
    btn:'Schedule Call',
    purchaseLink:'https://calendly.com/geauxcode4/30min',
    offerlist: [
      {title: "SEO Keyword & Longtail Keyword Research"},
      {title: "Monthly Newsletter and SEO Blog Posts for One Year"},
      {title: "Creative Designs & Infographics"},
      {title: "Quarterly Business Review for One Year"},
    ],
  },
  {
    popular:true,
    packageName:"Single Page Site Marketing Package",
    price:'2500',
    subtitle:'Features',
    btn:'Schedule Call',
    purchaseLink:'https://calendly.com/geauxcode4/30min',
    offerlist: [
      {title: "12 Month Marketing and Advertising Plan"},
      {title: "Single Page Website"},
      {title: "Monthly Blog Post and Newsletter for One Year"},
      {title: "Quarterly Business Review for One Year"},
    ],
  },
  {
    popular:false,
    packageName:"Premium Starter Plan",
    price:'5000',
    subtitle:'Features',
    btn:'Schedule Call',
    purchaseLink:'https://calendly.com/geauxcode4/30min',
    offerlist: [
      {title: "Business Site Design, Development, and Maintenance"},
      {title: "Monthly Newsletter and SEO Blog Posts for One Year"},
      {title: "Digital Marketing Planning and Managment"},
      {title: "Quarterly Business Review for One Year"},
    ],
  },
]
---

<!-- ====== Pricing Section Start -->
<section
  id="pricing"
  class="relative z-20 overflow-hidden bg-white dark:bg-dark pt-20 pb-12 lg:pt-[120px] lg:pb-[90px]"
>
  <div class="container">
    <div class="-mx-4 flex flex-wrap">
      <div class="w-full px-4">
        <div class="mx-auto mb-[60px] max-w-[510px] text-center">
          <span class="mb-2 block text-lg font-semibold text-primary">
            Packaged Solutions
          </span>
          <h2 class="mb-3 text-3xl font-bold text-dark dark:text-white sm:text-4xl md:leading-[1.2] md:text-[40px]">
            Current Sales Packages
          </h2>
          <p class="text-base text-body-color dark:text-dark-6">
            Save big with our current packaged deals we are offering. Contact us for an accurate quote for your project because your project may cost more or less depending on your needs.
          </p>
        </div>
      </div>
    </div>

    <div class="-mx-4 flex flex-wrap justify-center">
      {priceboxes.map(pricebox => (
        <div class="w-full px-4 md:w-1/2 lg:w-1/3">
          <div
            class={`wow fadeInUp relative z-10 mb-10 overflow-hidden rounded-xl bg-white dark:bg-dark-2 py-10 px-8 shadow-pricing sm:p-12 lg:py-10 lg:px-6 xl:p-14`}
            data-wow-delay=".15s"
          >
            {
              pricebox.popular && (
                <p
                  class="absolute right-[-50px] top-[60px] inline-block -rotate-90 rounded-tl-md rounded-bl-md bg-primary py-2 px-5 text-base font-medium text-white"
                >
                  Recommended
                </p>
              )
            }

            <span
              class={`mb-5 block text-xl font-medium text-dark dark:text-white`}
            >
              {pricebox.packageName}
            </span>
            <h2 class="mb-11 text-4xl font-semibold text-dark dark:text-white xl:leading-[1.21] xl:text-[42px]">
              <span class="text-xl font-medium">$</span>
              <span class="ml-1 -tracking-[2px]">{pricebox.price}</span>
              <span class="text-base font-normal text-body-color dark:text-dark-6">
                Approximate Cost
              </span>
            </h2>

            <div class="mb-[50px]">
              <h5 class="mb-5 text-lg font-medium text-dark dark:text-white">{pricebox.subtitle}</h5>

              <div class="flex flex-col gap-[14px]">
                {pricebox.offerlist.map(item => (
                  <p
                    class={`text-base text-body-color dark:text-dark-6`}
                  >
                    {item.title}
                  </p>
                ))}
              </div>
            </div>

            <a
              href={pricebox.purchaseLink}
              class={`inline-block rounded-md bg-primary py-3 px-7 text-center text-base font-medium text-white transition hover:bg-blue-dark`}
            >
              {pricebox.btn}
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
<!-- ====== Pricing Section End -->
